/* pages/liberalArts/index.wxss */
@import "../common.wxss";

.topbar {
  position: fixed;
  top: 0;
  background-color: white;
  height: 7vh;
  width: 100%;
  z-index: 999;
  display: flex;
  justify-content: space-around;
}

.filter-container {
  position: fixed;
  top: 7vh;
  width: 100%;
  z-index: 999;
}

.filter-content {
  background-color: white;
  border-radius: 0 0 10px 10px;
  padding-bottom: 5px;
}

.filter-item {
  font-size: 2vh;
  height: 3vh;
  line-height: 3vh;
  text-align: center;
  margin: 5px 0 5px 0;
}

.filter-title-box {
  line-height: 7vh;
}

.base-container {
  background-color: #F5F5F5;
  width: 100%;
  position: absolute;
  top: 7vh;

  display: flex;
  flex-direction: column;
  align-items: center;
}

.card-container {
  width: 80vw;
  margin: 5px 0 5px 0;
  min-height: 100px;
  background-color: #FFFFFF;
  border-radius: 8px;
  padding: 10px;
}

.card-container:first-child {
  margin-top: 20px;
}

.box-title {
  position: relative;
  width: 80vw;
  font-size: 2.4vh;
  font-weight: 550;
}

.content-font {
  font-size: 2vh;
  margin: 3px 0 3px 0;
}

.status-button {
  padding: 3px 5px 3px 5px;
  background-color: #D9D9D9;
  border-radius: 10px;
  font-size: 2.5vh;
  line-height: 2.5vh;
  height: 2.5vh;
  max-width: 20vw;
  text-align: center;
}

