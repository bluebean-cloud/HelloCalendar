/* pages/ddl/index.wxss */
@import "../common.wxss";

.ddl-base-container {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding-top: 3vh;
}

.finished-title {
  font-size: 5vh;
  height: 5vh;
  line-height: 5vh;
  margin-left: 5vw;
  margin-bottom: 2vh;
}

.create-ddl-button {
  position: fixed;
  bottom: 5vh;
  right: 5vw;
}

.form-container {
  position: fixed;
  border-radius: 30px;
  padding: 0 3vw 0 3vw;
  left: 0;
  width: 94vw;
  height: 100%;
  background-color: var(--box-background-color);
  z-index: 999;
  transition: bottom 0.5s ease-in-out;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

.form-title {
  width: 85vw;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 10vh;
  line-height: 10vh;
}

.form-box {
  background-color: white;
  width: 80vw;
  display: flex;
  flex-direction: column;
  border-radius: 15px;
  padding: 0 5vw 0 5vw;
  margin-bottom: 5vh;
}

.input-title {
  font-size: 3vh;
  font-weight: 600;
  line-height: 13vh;
  float: left;
}

.input-item {
  height: 13vh;
  width: 30vw;
  text-align: center;
  line-height: 13vh;
  margin-left: 48vw;
  font-size: 3vh;
  font-weight: 600;
}

.ddl-date-box {
  display: flex;
  flex-direction: column;
  width: 100%;
  min-height: 10vh;
  background-color: var(--box-background-color);
  box-shadow: 0 -.2vh 3px gray;
  border-radius: 10px 10px 0 0;
  margin-bottom: 3vh;
  margin-top: 1vh;
}

.ddl-content-box {
  width: 100%;
  height: 10vh;
  margin-top: 1vh;
  background-color: var(--item-background-color);
}

.ddl-item {
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ddl-box {
  border-radius: 5px;
  border: .5vh solid;
  width: 4vh;
  height: 4vh;
  margin-left: 5vw;
  margin-top: 2.5vh;
}

.ddl-title {
  margin-left: 3vw;
  font-size: small;
  font-weight: 600;
  width: 40vw;
  line-height: 5vh;
}

.ddl-time {
  color: var(--font-gray-color);
}

.ddl-count {
  width: 30vw;
  text-align: center;
}
