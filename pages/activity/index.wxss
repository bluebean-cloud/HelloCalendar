/* pages/activity/index.wxss */
@import "../common.wxss";

.activity-base-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100vw;
  height: 100vh;
}

.activity-box-container {
  background-color: var(--card-background-color);
  margin: 5px 0 5px 0;
  padding: 10px 15px 10px 15px;
  border-radius: 42px;
  width: 80%;
}
.activity-box-title {
  text-align: center;
  width: 100%;
  font-size: 4vh;
  font-weight: 600;
}

.activity-in-box {
  display: flex;
  flex-direction: column;
  border-radius: 20px;
  margin: 5px 20px 5px 20px;
  padding: 7px 5px 7px 5px;
  background-color: var(--son-item-background-color);
}

.activity-in-item {
  display: grid;
  grid-template-columns: 3fr 1fr;
  padding: 5px 10px 5px 10px;
}

.activity-in-left {
  text-align: left;
}

.activity-in-right {
  text-align: right;
}